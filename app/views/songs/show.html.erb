<div data-role="page">
	<div data-role="header"> <h2>Songed</h2></div>
	<div data-role="content">
		<p>
		  <b>Artist:</b>
		  <%=h @song.artist.name %>
		</p>
		
		<p>
		  <b>Title:</b>
		  <%=h @song.title %>
		</p>
		
		<p>
		  <b>Lyrics:</b>
		  <%=h @song.lyrics %>
		</p>
		
	</div>
	<div data-role="footer" class="ui-bar">
		<div data-role="navbar" class="ui-bar" data-grid="d"</div>
		<div data-role="controlgroup" data-type="horizontal" data-theme="d">
		<div class="listbottombutton"> 	
		<%= link_to 'Edit', edit_song_path(@song) %>
		<%= link_to 'Back', artist_path %>
		</div>
	</div>
	
</div>
